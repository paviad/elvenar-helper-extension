{
  "manifest_version": 3,
  "name": "Elvenar Helper Extension",
  "version": "3.1.0",
  "description": "A comprehensive toolkit for Elvenar featuring a live city planner, inventory manager, and more.",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@elvenar-helper-extension",
      "strict_min_version": "146.0",
      "data_collection_permissions": {
        "required": ["websiteContent"],
        "optional": []
      }
    }
  },
  "host_permissions": [
    "https://*.elvenar.com/*",
    "https://*.innogamescdn.com/*"
  ],
  "background": {
    "scripts": [
      "svc.bundle.js"
    ]
  },
  "action": {
    "default_title": "(Click to show tab)"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon32.png",
        "sprite.png"
      ],
      "matches": [
        "https://*.elvenar.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.elvenar.com/*"
      ],
      "js": [
        "vendors.bundle.js",
        "main.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "icon32.png"
  }
}